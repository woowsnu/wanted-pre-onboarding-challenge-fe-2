{
    // 타입스크립트가 커버할 범위, 경로 지정
  "include": ["src"],
  "compilerOptions": {
     // 자바스크립트 파일이 생성될 디렉터리 지정 (타입스크립트는 컴파일러니까)
    "outDir": "build",
    // 자바스크립트 버전 (너무 최신 버전은 호환성이 좋지 않다.)
    "target": "ES6",
    // 자바스크립트가 어떤 환경에서 사용되는지를 알려줘 자동 완성을 사용할 수 있게 된다. (DOM = 브라우저 환경을 말함
    "lib": ["ES6", "DOM"],
    "strict": true,
    "allowJs": true
  }
}
